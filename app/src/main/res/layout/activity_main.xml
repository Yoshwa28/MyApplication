<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_height="match_parent"
    android:background="@drawable/fondouno"
    tools:context=".MainActivity">

    <LinearLayout

        android:layout_width="408dp"
        android:layout_height="192dp"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_weight="0.5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.029">

        <pl.droidsonroids.gif.GifImageButton
            android:id="@+id/btn_rock"
            android:layout_width="167dp"
            android:layout_height="162dp"
            android:layout_marginHorizontal="25dp"
            android:layout_weight="1"
            android:scaleType="fitXY"
            android:adjustViewBounds="false"
            android:background="@drawable/rockbutton"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.11"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.379" />

        <pl.droidsonroids.gif.GifImageButton
            android:id="@+id/btn_pop"
            android:layout_width="167dp"
            android:layout_height="162dp"
            android:layout_weight="1"
            android:scaleType="fitXY"
            android:layout_marginRight="20dp"
            android:background="?android:attr/selectableItemBackground"
            android:src="@drawable/popbutton"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.934"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.379" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="141dp"
            android:layout_height="73dp"
            android:layout_weight="1"
            android:fontFamily="@font/artifika"
            android:gravity="center"
            android:text="ROCK"
            android:textColor="#fff"
            android:textSize="4mm"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.15"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.24" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="141dp"
            android:layout_height="73dp"
            android:layout_weight="1"
            android:fontFamily="@font/artifika"
            android:gravity="center"
            android:text="POP"
            android:textColor="#fff"
            android:textSize="4mm"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.87"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.24" />
    </LinearLayout>

    <LinearLayout

        android:layout_width="408dp"
        android:layout_height="192dp"
        android:layout_weight="0.5"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.4">

        <pl.droidsonroids.gif.GifImageButton
            android:id="@+id/btn_metal"
            android:layout_width="167dp"
            android:layout_height="160dp"
            android:layout_weight="1"
            android:scaleType="fitXY"
            android:layout_marginHorizontal="25dp"
            android:background="@drawable/metalbutton"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.11"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.379" />

        <pl.droidsonroids.gif.GifImageButton
            android:id="@+id/btn_electro"
            android:layout_width="167dp"
            android:layout_height="162dp"
            android:layout_marginRight="20dp"
            android:layout_weight="1"
            android:scaleType="fitXY"
            android:background="@drawable/electricbutton"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.934"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.379" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="141dp"
            android:layout_height="73dp"
            android:layout_weight="1"
            android:fontFamily="@font/artifika"
            android:gravity="center"
            android:text="METAL"
            android:textColor="#fff"
            android:textSize="4mm"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.15"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.55" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="160dp"
            android:layout_height="73dp"
            android:layout_weight="1"
            android:fontFamily="@font/artifika"
            android:gravity="center"
            android:text="ELECTRO"
            android:textColor="#fff"
            android:textSize="4mm"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.15"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.86" />
    </LinearLayout>

    <LinearLayout

        android:layout_width="408dp"
        android:layout_height="192dp"
        android:layout_weight="0.5"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.777">

        <pl.droidsonroids.gif.GifImageButton
            android:id="@+id/btn_anime"
            android:layout_width="167dp"
            android:layout_height="162dp"
            android:layout_marginRight="20dp"
            android:background="?android:attr/selectableItemBackground"
            android:scaleType="fitXY"
            android:src="@drawable/anisonbutton"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.934"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.379" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView"
            android:layout_width="141dp"
            android:layout_height="73dp"
            android:layout_weight="1"
            android:fontFamily="@font/artifika"
            android:gravity="center"
            android:text="ANISON"
            android:textColor="#fff"
            android:textSize="4mm"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.87"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.86" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.airbnb.lottie.LottieAnimationView
            android:layout_width="116dp"
            android:layout_height="80dp"
            android:scaleType="fitXY"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.014"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0"
            app:lottie_autoPlay="true"
            android:layout_weight="1"
            app:lottie_colorFilter="?android:attr/colorFocusedHighlight"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/music2" />

        <com.airbnb.lottie.LottieAnimationView
            android:layout_width="115dp"
            android:layout_height="79dp"
            android:scaleType="fitXY"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.971"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0"
            app:lottie_autoPlay="true"
            android:layout_weight="1"
            app:lottie_colorFilter="?android:attr/colorFocusedHighlight"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/music2" />

        <com.airbnb.lottie.LottieAnimationView
            android:layout_width="118dp"
            android:layout_height="76dp"
            android:scaleType="fitXY"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0"
            app:lottie_autoPlay="true"
            android:layout_weight="1"
            app:lottie_colorFilter="?android:attr/colorFocusedHighlight"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/music2" />
    </LinearLayout>


</LinearLayout>